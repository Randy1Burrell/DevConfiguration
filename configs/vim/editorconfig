[*]
# Set as the root configuration system wide
root = true
# Set indent style for all files
indent_style = space
# Unix-style newlines with a new line ending every file
end_of_line = lf
# Remove trailing white spaces for every file type
trim_trailing_whitespace = true
# Set default charset for files
charset = utf-8

# Matched different files
# Set default charset
[*.{js,java,html,php,py,rb,css,c,cpp,yml,conf,sh}]
# Insert a final new line for certain file types
insert_final_newline = true

# Indentation style for different program files
[*.{jade,json,js,html,htm,css,sh}]
indent_style = space
indent_size = 2

[*.{py,rb,php,c,cpp,java,yml,conf,*}]
indent_style = space
indent_size = 4

[MakeFile]
indent_style = tab
indent_size = 4
